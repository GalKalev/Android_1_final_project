<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".fragments.myShopsAndSubscribedShops.ownedShops.AddOwnedShop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="שדות עם * הם שדות חובה" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="* שם החנות:" />

                        <EditText
                            android:id="@+id/addShopName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="הכנס שם החנות"
                            android:inputType="text" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="* כתובת החנות:" />

                        <EditText
                            android:id="@+id/addShopAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="הכנס כתובת החנות"
                            android:inputType="text" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="* תמונת החנות:" />

                        <Button
                            android:id="@+id/addShopImageButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="בחר תמונה לחנות" />

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="פירוט על החנות" />

                        <EditText
                            android:id="@+id/addShopDes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="פירוט החנות"
                            android:inputType="text" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="לינקים" />

                        <EditText
                            android:id="@+id/addShopLink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="לינק"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/addShopLinkButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="הוסף לינק" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="הוסף תגיות" />

                        <Spinner
                            android:id="@+id/addShopTagsSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="הוסף זמני עבודה בשבוע" />

                        <Button
                            android:id="@+id/addWorkingTimeRangeButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="הוסף זמן עבודה" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="שעות עבודה" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ימים" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/sunLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForSun"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl" />
                                    </TableRow>
                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="א" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/monLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForMon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl"/>
                                    </TableRow>


                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ב" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/tueLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForTue"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl" />
                                    </TableRow>

                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ג" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/wedLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForWed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl"/>
                                    </TableRow>

                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ד" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/thurLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForThur"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl" />
                                    </TableRow>

                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ה" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/friLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForFri"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl" />
                                    </TableRow>

                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ו" />

                            </TableRow>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TableLayout
                                    android:id="@+id/satLayout"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <TextView
                                            android:id="@+id/timePlaceholderForSat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="לא הוזנו שעות עבודה ליום זה"
                                            android:textDirection="rtl" />
                                    </TableRow>

                                </TableLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ש" />

                            </TableRow>

                        </TableLayout>

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="זמן כל תור" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="דק'" />

                            <EditText
                                android:id="@+id/appointmentTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="number" />

                        </LinearLayout>

                        <Button
                            android:id="@+id/addTheShopButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="הוסף חנות" />

        </LinearLayout>

    </ScrollView>
    </LinearLayout>

</LinearLayout>